<Window x:Class="StoryNavigationHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoryNavigationHelper"
		xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
		xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
		mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Border BorderBrush="Beige" BorderThickness="5">
		<Grid>
			<Menu>
				<MenuItem Header="_File">
					<MenuItem Header="_New Conversation" Command="{Binding NewConversation}" />
                    <MenuItem Header="New Choice" Command="{Binding NewChoice}" />
                    <Separator />
					<MenuItem Header="_Save All" Command="{Binding SaveAll}"/>
					<Separator />
					<MenuItem Header="_Exit" Command="{Binding Exit}" />
				</MenuItem>
				<MenuItem Header="Debug" >
					<MenuItem Header="Build Project" Command="{Binding BuildProject}" />
				</MenuItem>
			</Menu>
		</Grid>
	</Border>
</Window>
